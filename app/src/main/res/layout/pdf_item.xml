<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#F6F5F5"
    android:elevation="7dp"
    android:focusable="true"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/pdfItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/pdfIconIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:src="@mipmap/pdf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/pdfIconIV"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pdfNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="PDF Name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pdfDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="PDF Description"
                android:textSize="10sp"
                android:textStyle="italic" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/addToFAvBTN"
            style="?android:attr/starStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>